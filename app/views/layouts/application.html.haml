!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title OrderManager
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      - if user_signed_in?
        .dropdown
          %i.dropdown-toggle.menu_button.glyphicon.glyphicon-menu-hamburger#dropdown-menu{"data-toggle":"dropdown", "aria-haspopup":"true", "aria-expanded":"false"}
          %ul.dropdown-menu.orders-menu{"aria-labelledby":"dropdown-menu"}
            %li
              = link_to "/" do
                %b.logout_button.glyphicon.glyphicon-list
                %label.logout_label Zakázky
            %li
              = link_to "/orders/all" do
                %b.logout_button.glyphicon.glyphicon-filter
                %label.logout_label Všechny zakázky
            - if current_user.admin
              %li
                = link_to "/users" do
                  %b.logout_button.glyphicon.glyphicon-user
                  %label.logout_label Uživatelé
            %li
              = link_to destroy_user_session_path, :method => :delete do
                %b.logout_button.glyphicon.glyphicon-log-out
                %label.logout_label Odhlásit se

      = yield
      = bb_alert
